package chp15_6;

public class TestSync implements Runnable{
	
	private int balance;
	
	public void run(){
		
		for(int i = 0;i<50;i++){
			
			increment();
			System.out.println("balance is "+balance);
		}
	}
	
	public void increment(){

		System.out.println("increment0 balance is "+balance);
		int i = balance;

		System.out.println("increment1 balance is "+balance);
		balance = i + 1;

		System.out.println("increment2 balance is "+balance);
	}

}
